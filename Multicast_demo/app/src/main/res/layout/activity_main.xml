<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/sendbttn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="f1"
        android:text="SEND"
        tools:layout_editor_absoluteX="261dp"
        tools:layout_editor_absoluteY="176dp"
        android:layout_marginLeft="54dp"
        android:layout_marginStart="54dp"
        android:layout_marginTop="120dp"
        android:layout_below="@+id/Subscribe"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/Subscribe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="f2"
        android:text="Subscribe"
        tools:layout_editor_absoluteX="361dp"
        tools:layout_editor_absoluteY="376dp" />

    <TextView
        android:id="@+id/tv"
        android:layout_width="200dp"
        android:layout_height="50dp"

        android:layout_below="@+id/sendbttn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="69dp"
        android:layout_alignParentBottom="true"
        android:maxLines = "1000"

        android:scrollbars = "vertical"
        />
    <EditText
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="4dp"
        tools:layout_editor_absoluteY="176dp"
        android:layout_marginLeft="46dp"
        android:layout_marginStart="46dp"
        android:layout_alignBaseline="@+id/sendbttn"
        android:layout_alignBottom="@+id/sendbttn"
        android:layout_toRightOf="@+id/sendbttn"
        android:layout_toEndOf="@+id/sendbttn" />

</RelativeLayout>
